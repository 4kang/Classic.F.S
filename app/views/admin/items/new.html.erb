<div class="container mt-5">
  <div class="row">
    <div class="mx-auto col-lg-6">
      商品新規登録
      <%= form_with model: @item, url: admin_items_path do |f| %>

      <div class="mb-3 mt-3">
            <%= f.label :image, "商品画像" %>
            <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="mb-3">
            <%= f.label :name, "商品名" %>
            <%= f.text_field :name %>
      </div>
      <div class="mb-3">
            <%= f.label :introduction, "説明文" %>
            <%= f.text_area :introduction %>
      </div>
      <div class="mb-3">
            <%= f.label :genre_id, "ジャンル名" %>
            <%= f.collection_select :genre_id, @genres, :id, :name, {prompt: "--選択してください--"} %>
      </div>
      <div class="mb-3">
            <%= f.label :price, "税込価格" %>
            <%= f.number_field :price %>円
      </div>
      <div class="mb-3">
            <%= f.label :is_active, "販売ステータス" %>
      </div>
      <div class="mb-3">
        <%= f.radio_button :is_active, 0, checked: true %>販売中
        <%= f.radio_button :is_active, 1 %>販売停止中
      </div>
      <%= f.submit '登録', class:"btn btn-outline-danger" %><%= link_to '戻る', admin_items_path, class:"btn btn-outline-danger" %>
      <% end %>
    </div>
  </div>
</div>
