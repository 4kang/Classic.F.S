<div class='container mt-5' style="background-color:#faf0e6">
  <div class="row">
    <div class='mx-auto col-lg-6'>
      <h5 class="mt-4">登録内容変更</h5>
      <%= form_with model: @customer, url: customers_my_page_edit_path do |f| %>

      <div class="mb-3">
        <div class="row">
          <div class="col">
            <%= f.label :last_name, "姓" %>
            <%= f.text_field :last_name,class:"form-control" %>
          </div>
          <div class="col">
            <%= f.label :first_name, "名" %>
            <%= f.text_field :first_name, class:"form-control" %>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <div class="row">
          <div class="col">
            <%= f.label :last_name_kana, "セイ" %>
            <%= f.text_field :last_name_kana, class:"form-control" %>
          </div>
          <div class="col">
            <%= f.label :first_name_kana, "メイ" %>
            <%= f.text_field :first_name_kana, class:"form-control" %>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <div class="row">
          <div class="col">
            <%= f.label :email, "メールアドレス" %>
            <%= f.text_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
          </div>
        </div>
      </div>

      <div class="mb-3">
            <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
            <%= f.text_field :postal_code, class:"form-control" %>
      </div>

      <div class="mb-3">
            <%= f.label :address, "住所" %>
            <%= f.text_field :address, class:"form-control" %>
      </div>

      <div class="mb-3">
            <%= f.label :telephone_number, "電話番号（ハイフンなし）" %>
            <%= f.text_field :telephone_number, class:"form-control" %>
      </div>

      <div class="mt-3">
        <%= f.submit '保存', class:"btn btn-outline-danger btn-block" %>
      </div>

      <div class="mt-5">
        <div class="text-right">
         <%= link_to "退会する", customers_unsubscribe_path, class:"btn btn-outline-danger" %>
        </div>
      </div>
      <% end %>
   </div>
 </div>
</div>

<div class='container mt-5'>
  <div class="row">
    <%= link_to "⇐　マイページ", customers_my_page_path, class:"btn btn-outline-danger" %>
  </div>
</div>