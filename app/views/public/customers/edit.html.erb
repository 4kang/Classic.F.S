<div class='container mt-5' style="background-color:#faf0e6">
  <div class="row">
    <div class='mx-auto col-lg-6'>
      <h5 class="mt-4"><strong>登録内容編集</strong></h5>
      <%= form_with model: @customer, url: customers_my_page_edit_path do |f| %>

      <div class="mb-3">
        <div class="row">
          <div class="col">
            <%= f.label :last_name, "姓" %>
            <%= f.text_field :last_name,class:"form-control" %>
          </div>
          <div class="col">
            <%= f.label :first_name, "名" %>
            <%= f.text_field :first_name, class:"form-control" %>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <div class="row">
          <div class="col">
            <%= f.label :last_name_kana, "セイ" %>
            <%= f.text_field :last_name_kana %>
          </div>
          <div class="col">
            <%= f.label :first_name_kana, "メイ" %>
            <%= f.text_field :first_name_kana %>
          </div>
        </div>
      </div>

氏名(カナ)<%= f.text_field :last_name_kana %>
メールアドレス<%= f.text_field :email %>
郵便番号<%= f.text_field :postal_code %>
住所<%= f.text_field :address %>
電話番号 <%= f.text_field :telephone_number %>

<%= f.submit '保存' %>
  </div>
</div>

<% end %>