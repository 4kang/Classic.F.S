<% if customer_signed_in? %>
  <% if item.favorited_by?(current_customer) %>
    <%= link_to item_favorites_path(item), method: :delete, class: "text-light", remote: true do %>
      <i class="fas fa-heart"></i>
      お気に入り登録済み
    <% end %>
  <% else %>
    <%= link_to item_favorites_path(item), method: :post, class: "text-light", remote: true do %>
      <i class="far fa-heart"></i>
      お気に入りに登録する
    <% end %>
  <% end %>
<% else %>
  <%= link_to new_customer_session_path, class: "text-light" do %>
    <i class="far fa-heart"></i>
    お気に入りに登録するにはログインしてください
  <% end %>
<% end %>