<div class="container">
 <div class="container mt-5">

     <div class="row border border-dark">
      <div class="col text-center" style="background-color:#faf0e6">
       注文情報
      </div>
     </div>

    <div class="row border border-dark border-top-0">
     <div class="col-2 text-center border-right border-dark" style="background-color:#faf0e6">注文日</div>
     <div class="col-6 text-center border-right border-dark" style="background-color:#faf0e6">配送先</div>
     <div class="col-2 text-center border-right border-dark" style="background-color:#faf0e6">支払い金額</div>
     <div class="col-2 text-center" style="background-color:#faf0e6">ステータス</div>
    </div>
    <div class="row border border-top-0 border-dark">
     <div class="col-2 text-center border-right border-dark">
       <%= @order.created_at.strftime("%Y/%m/%d") %>
     </div>
    <div class="col-6 d-flex align-items-center justify-content-center border-right border-dark">
      〒<%= @order.post_code %><br>
      <%= @order.address%><br>
      <%= @order.name %><br><%= @order.telephone_number %>
    </div>
    <div class="col-2 d-flex align-items-center justify-content-center border-right border-dark">
      <%= @order.payment_method_i18n %>
    </div>
    <div class="col-2 d-flex align-items-center justify-content-center border-dark">
      <%= @order.status_i18n %>
    </div>
    </div>


   <div class="row border border-dark mt-5">
    <div class="col text-center" style="background-color:#faf0e6">
      請求情報
    </div>
    </div>

    <div class="row border border-dark border-top-0">
     <div class="col-4 text-center border-right border-dark" style="background-color:#faf0e6">商品合計</div>
     <div class="col-4 text-center border-right border-dark" style="background-color:#faf0e6">配送料</div>
     <div class="col-4 text-center" style="background-color:#faf0e6">ご請求額</div>
    </div>
    <div class="row border border-top-0 border-dark">
     <div class="col-4 text-center border-right border-dark">
      <%= @item.sum(&:subtotal) %>円
     </div>
     <div class="col-4 d-flex align-items-center justify-content-center border-right border-dark">
      800円
     </div>
     <div class="col-4 d-flex align-items-center justify-content-center border-dark">
      <%= @order.pay_total %>円
     </div>
    </div>

    <div class="row border border-dark mt-5">
    <div class="col text-center" style="background-color:#faf0e6">
      注文内容
    </div>
    </div>
    <% @item.each do |item| %>
    <div class="row border border-dark border-top-0">
     <div class="col-3 text-center border-right border-dark" style="background-color:#faf0e6">商品</div>
     <div class="col-3 text-center border-right border-dark" style="background-color:#faf0e6">単価（税込）</div>
     <div class="col-3 text-center border-right border-dark" style="background-color:#faf0e6">個数</div>
     <div class="col-3 text-center" style="background-color:#faf0e6">小計</div>
    </div>
    <div class="row border border-top-0 border-dark">
     <div class="col-3 text-center border-right border-dark">
       <%= item.item.name %>
     </div>
     <div class="col-3 d-flex align-items-center justify-content-center border-right border-dark">
      <%= item.item.tax_include_price %>
     </div>
     <div class="col-3 d-flex align-items-center justify-content-center border-right border-dark">
      <%= item.amount %>
     </div>
     <div class="col-3 d-flex align-items-center justify-content-center border-dark">
      <%= (item.item.tax_include_price*item.amount).to_s(:delimited) %>円
     </div>

    </div>
   <% end %>
 </div>
</div>