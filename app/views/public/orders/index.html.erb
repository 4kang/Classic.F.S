<div class="container mt-5">
 　<div class="row border border-dark">
    <div class="col-md-12 text-center" style="background-color:#faf0e6">
      注文履歴履歴一覧
    </div>
   </div>

   <div class="row justify-content-center">
    <table class="table mobile-blocky">
       <tbody>
        <% @order.each do |order| %>
        <tr>
         <td class="text-right" style="background-color:#faf0e6">
          <%= order.created_at.strftime("%Y/%m/%d") %>
         </td>
         <td class="text-right">
          〒<%= order.post_code %><br>
          <%= order.address%><br>
          <%= order.name %><%= order.telephone_number %>
         </td>
         <td class="text-right">
          <%@item.each do |item| %>
           <% if item.order_id == order.id %><%= item.item.name %><br>
           <% end %>
          <% end %>
         </td>
         <td class="text-right"><%= order.pay_total %>円</td>
         <td class="text-right"><%= order.status_i18n %></td>
         <td class="text-right">
          <%= link_to "表示する", order_path(order), class: "btn text-light", style: "background-color:#d2b48c" %>
         </td>
        </tr>
        <% end %>
       </tbody>
      </table>
     </div>
</div>