<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    氏名
    <%= f.text_field :last_name, placeholder: "山田" %><%= f.text_field :first_name, placeholder: "花子" %>
  </div>

  <div class="field">
    氏名(カナ)
    <%= f.text_field :last_name_kana, placeholder: "ヤマダ" %><%= f.text_field :first_name_kana, placeholder: "ハナコ" %>
  </div>

  <div class="field">
  メールアドレス
    <%= f.email_field :email, autofocus: true, placeholder: "****@****.co.jp" %>
  </div>

  <div class="field">
    パスワード
    <% if @minimum_password_length %>
     <% @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %></br>
    ※6桁以上の半角英数字をご入力下さい
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %></br>
    ※確認のため再度入力してください
  </div>

  <div class="field">
    郵便番号
    <%= f.text_field :postal_code, placeholder: "ハイフン無し" %>
  </div>

  <div class="field">
    住所
    <%= f.text_field :address %>
  </div>

  <div class="field">
    電話番号
    <%= f.text_field :telephone_number, placeholder: "ハイフン無し" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "public/sessions/new" %>
<%= render "public/shared/links" %>
