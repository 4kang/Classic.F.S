<div class="container mt-5">
  <div class="row">
   <p><strong>新規登録</strong></p>
  </div>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
   <%= render "public/shared/error_messages", resource: resource %>
   <table class="table table-borderless" border="1">
    <thead>
     <tr>
      <th style="background-color:#f5deb3" border="1">会員情報</th>
      <th>新規発行</th>
     </tr>
    </thead>
    <tbody>
     <tr>
      <th style="background-color:#f5deb3">氏名</th>
       <td><%= f.text_field :last_name, placeholder: "山田" %></br>
       <%= f.text_field :first_name, placeholder: "花子" %>
       </td>
     </tr>
     <tr>
      <th style="background-color:#f5deb3">氏名(カナ)</th>
       <td>
        <%= f.text_field :last_name_kana, placeholder: "ヤマダ" %></br>
        <%= f.text_field :first_name_kana, placeholder: "ハナコ" %>
       </td>
     </tr>
     <tr>
      <th style="background-color:#f5deb3">メールアドレス</th>
       <td>
        <%= f.email_field :email, autofocus: true, placeholder: "****@****.co.jp" %></br>
        <%= f.text_field :first_name_kana, placeholder: "ハナコ" %>
       </td>
     </tr>
     <tr>
      <th style="background-color:#f5deb3">パスワード</th>
       <td>
        <% if @minimum_password_length %>
        <% @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %></br>
        ※6桁以上の半角英数字をご入力下さい</br>
         <%= f.password_field :password_confirmation, autocomplete: "new-password" %></br>
         ※確認のため再度入力してください
       </td>
     </tr>
     <tr>
      <th style="background-color:#f5deb3">郵便番号</th>
       <td>
        <%= f.text_field :postal_code, placeholder: "ハイフン無し" %>
       </td>
     </tr>
     <tr>
      <th style="background-color:#f5deb3">住所</th>
       <td>
        <%= f.text_field :address %>
       </td>
     </tr>
     <tr>
      <th style="background-color:#f5deb3">電話番号</th>
       <td>
        <%= f.text_field :telephone_number, placeholder: "ハイフン無し" %><%= f.text_field :address %>
       </td>
     </tr>
    </tbody>
   </table>
   <div class="d-grid gap-2 col-6 mx-auto">
    <%= f.submit "登録", class: "btn btn btn-danger d-grid gap-2 col-6 mx-auto" %>
   </div>
  <% end %>
</div>