  <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
  <div class="container">
  <div class="row">
    <div class="col-2">
      <div class="mt-5">
        <%= render 'public/items/genre',genres: @genres %>
      </div>
    </div>
    <!--スライドショー-->
    <div class="col-10 mt-4">
      <div class="slider">
        <% @slide_items.each do |item|%>
          <%= link_to image_tag(item.get_image(800, 800)), item_path(item), class: "slide" %>
        <% end %>
      </div>
      <div class="my-5">
        <h2 class="title title-text text-center">新着商品</h2>
        <%= render "public/items/index", items: @items %>
        <div class="text-center index-link">
          <%= link_to "商品一覧",items_path, class: "btn btn-template-index light-shadow py-3",style: "width: 60%"%>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
 $(function() {
    $('.slider').slick({
        dots: true,
        autoplay: true,
        autoplaySpeed: 3000,
    });
    
    $('.slick-dots li').on('mouseover', function() {
    $('.a').slick('goTo', $(this).index());
  });
});
</script>