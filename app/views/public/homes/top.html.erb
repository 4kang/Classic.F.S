  <div class="container">
  <div class="row">
    <div class="col-2">
      <div class="mt-5">
        <%= render 'public/items/genre',genres: @genres %>
      </div>
    </div>
    <div class="col-10 mt-4">
      <div class="slider">
        <% @slide_items.each do |item|%>
          <%= link_to image_tag(item.get_image(800, 800)), item_path(item), class: "slide" %>
        <% end %>
      </div>
      <div class="text-center mb-3">
        <h4>New Item</h4>
      </div>
        <%= render "public/items/index", items: @items %>
        <div class="col-12">
          <div class="text-center index-link mt-3">
           <%= link_to "　more　>>",items_path, class: "btn text-light mt-3", style: "background-color:#d2b48c" %>
          </div>
        </div>
    </div>
  </div>
</div>