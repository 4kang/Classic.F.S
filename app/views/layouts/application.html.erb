<!DOCTYPE html>
<html>
  <head>
    <title>Classicfs</title>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-s">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="sticky-top">
    <div class="border-bottom">
      <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#f5deb3">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Classic.F.S</span>
          </a>
          <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse" id="navbarNavDropdown" style>
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>

               <li class="dropdown text-light">
                 <i class="fas fa-user" aria-hidden="true"></i>
                 <a class="dropdown-toggle text-light " data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">

                   <span class="caret"></span>
                 </a>
                 <ul class="dropdown-menu">
                   <li><%= link_to "マイページ", customers_my_page_path, class: 'nav-link text-dark' %></li>
                   <li><%= link_to "注文履歴", orders_path, class: 'nav-link text-dark' %></li>
                   <li><%= link_to "配送先一覧", addresses_path, class: 'nav-link text-dark' %></li>
                   <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' %></li>
                 </ul>
                </li>

              <li>
                <%= link_to cart_items_path, class: "nav-link text-light" do %>
                <i class="fas fa-shopping-cart"></i>
                <% end %>
              </li>
      <% elsif admin_signed_in? %>
      <li>
        <%= link_to '商品一覧', admin_items_path %>
      </li>
      <li>
        <%= link_to '会員一覧', admin_customers_path %>
      </li>
      <li>
        <%= link_to 'ジャンル一覧', admin_genres_path %>
      </li>
      <li>
        <%= link_to '注文履歴一覧', admin_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
      </li>
      <% else %>
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
          <span class="caret"></span>
          <i class="fas fa-user"></i>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-dark' %></li>
          <li><%= link_to "ログイン", new_customer_session_path, class: 'nav-link text-dark' %></li>

        </ul>
      </li>
      <% end %>
            </ul>
        </div>
      </nav>
    </div>
  </header>

  <main></main>

  <body>
    <%= yield %>
  </body>
</html>
